            y_pos="0"
            elevation="0.8"
            width="350"
            height="85">
            <background default="R.textures.tiles.ground.fill-w01.png"/>
        </View>

    </ViewGroup>

    <!-- Grid -->
    <ViewGroup x_pos="0"
        y_pos="0"
        width="1920"
        height="1080"
        visible="true"
        alpha="0.1">

        <View x_pos="0"
            y_pos="0"
            elevation="0.05"
            width="4"
            height="1080"
            x_align="center"
            y_align="center">
            <background default="R.textures.bg.w01-00.png" />
        </View>

        <View x_pos="0"
            y_pos="0"
            elevation="0.1"
            width="1920"
            height="4"
            x_align="center"
            y_align="center">
            <background default="R.textures.bg.w01-00.png" />
        </View>

    </ViewGroup>

